{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stretchia",
  "version": "1.0.0",
  "identifier": "com.actionk.stretchia",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Stretchia",
        "url": "/index.html",
        "width": 200,
        "height": 140,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "label": "settings",
        "title": "Settings",
        "url": "/settings.html",
        "width": 300,
        "height": 400,
        "resizable": false,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "center": true
      },
      {
        "label": "stats",
        "title": "Statistics â€” Stretchia",
        "url": "/stats.html",
        "width": 520,
        "height": 560,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
